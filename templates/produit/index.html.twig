{% extends 'base.html.twig' %}

{% block body %}

<div class="example-wrapper">

    {% for types,messages in app.flashes %}
        <div class="alert alert-{{types}}">
            {% for message in messages %}
                <p>{{message}}</p>
            {% endfor %}
        </div>
    {% endfor %}

    <h1> {{ 'Product.List'|trans}} </h1>
    {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') ) %}
        {{form(form)}}
    {% endif %}
    <div class="container">
    {% for product in products %}
        <div >
            <div class="card-body">
                <h5 class="card-title">{{ product.nom }}</h5>
                <p class="card-text">{{ product.description }}</p>
                <img src="{{asset('/uploads/'~ product.photo)}}" style="max-width:100px;">
                <a href="{{ path('app_un_produit', {'id': product.id}) }}" class="btn btn-primary">Info</a>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
